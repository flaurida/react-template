{
    "name": "react-graphql-workshop",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "tslint": "tslint './src/**/*.{ts,tsx}'",
        "tslint:fix": "npm run tslint -- -p ./tsconfig.json -c ./tslint.json --fix",
        "prettier": "prettier --write --config ./.prettierrc './src/**/*.{ts,tsx,js,jsx,html,css}'",
        "storybook": "start-storybook -p 6006 -c .storybook",
        "build:storybook": "build-storybook",
        "cypress:open": "cypress open"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.{ts,tsx,js,jsx,html,css}": [
            "tslint -p ./tsconfig.json -c ./tslint.json --fix",
            "prettier --write",
            "git add"
        ]
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ],
    "dependencies": {
        "react": "16.8.6",
        "react-dom": "16.8.6",
        "react-scripts": "2.1.8",
        "typescript": "3.4.4"
    },
    "devDependencies": {
        "@storybook/addon-actions": "5.0.10",
        "@storybook/addon-knobs": "5.0.10",
        "@storybook/addon-options": "5.0.10",
        "@storybook/react": "5.0.10",
        "@types/jest": "24.0.11",
        "@types/node": "11.13.6",
        "@types/react": "16.8.14",
        "@types/react-dom": "16.8.4",
        "@types/react-router-dom": "4.3.2",
        "@types/storybook-addon-jsx": "5.4.3",
        "@types/storybook__addon-actions": "3.4.2",
        "@types/storybook__addon-knobs": "5.0.0",
        "@types/storybook__react": "4.0.1",
        "awesome-typescript-loader": "5.2.1",
        "cypress": "3.2.0",
        "dom-testing-library": "3.19.3",
        "husky": "1.3.1",
        "lint-staged": "8.1.5",
        "prettier": "1.17.0",
        "react-docgen-typescript-loader": "3.1.0",
        "react-router-dom": "5.0.0",
        "react-testing-library": "6.1.2",
        "storybook-addon-jsx": "7.1.0",
        "tslint": "5.16.0",
        "tslint-config-prettier": "1.18.0",
        "tslint-react": "4.0.0"
    }
}
